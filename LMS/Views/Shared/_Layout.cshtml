                        <li><a href="/Account/add">注册</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <div>
            <div class="left">
                <ul class="list-group">
                    <li class="list-group-item"><a href="#">首页</a></li>
                    <li class="list-group-item"><a href="#">车辆管理</a></li>
                    <li class="list-group-item"><a href="#">班次管理</a></li>
                    <li class="list-group-item"><a href="#">订单管理</a></li>
                    <li class="list-group-item"><a href="#">交接单管理</a></li>
                    <li class="list-group-item"><a href="#">线路管理</a></li>
                </ul>
            </div>
        </div>
        <div class="right">
            @RenderSection("contentBody")
        </div>
        <div class="foot">
            @Html.Partial("Footer")
        </div>
    </div>
</body>
</html>
